---
// components/EducationItem.astro
interface Props{
    institution: string;
    degree: string;
    dates: string;
    description?: string;
}

const { institution, degree, dates, description } = Astro.props;
---

<div class="mb-6">
    <h3 class="text-xl font-semibold text-gray-700">{degree}</h3>
    <p class="text-gray-600 text-sm">{institution} - {dates}</p>
    {description && <p class="text-gray-800 my-2">{description}</p>}
</div>
