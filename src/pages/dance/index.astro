---
import BaseLayout from '@src/layouts/BaseLayout.astro';
import ProjectList from '@src/layouts/ProjectList.astro';
import { dances } from './dances';
import DanceListFilter from '@src/components/DanceListFilter';
---

<BaseLayout
	title="Helen's Dance Projects"
	description=""
>
  <div class='container'>
    <div class="mb-10">
      <h1 class="text-3xl font-bold mb-2">Dance videos, covers, choreography, and more</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-lg"></p>
    </div>
    <DanceListFilter 
      client:load
      dances={dances} />
  </div>
</BaseLayout>
